<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="241dp">


        <TextView
            android:id="@+id/item_funcionario_data"
            android:layout_width="161dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:layout_marginStart="61dp"
            android:maxLines="2"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.073"
            tools:text="Data" />

        <TextView
            android:id="@+id/item_funcionario_hora"
            android:layout_width="171dp"
            android:layout_height="26dp"
            android:layout_margin="8dp"
            android:layout_marginEnd="16dp"
            android:maxLines="2"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.074"
            tools:text="Hora" />

        <TextView
            android:id="@+id/item_funcionario_placa"
            android:layout_width="166dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:maxLines="6"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_funcionario_data"
            tools:text="Placa" />

        <TextView
            android:id="@+id/item_funcionario_km"
            android:layout_width="172dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="6"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_funcionario_hora"
            tools:text="Km" />

        <TextView
            android:id="@+id/item_funcionario_nome_motorista"
            android:layout_width="370dp"
            android:layout_height="25dp"
            android:layout_marginBottom="108dp"
            android:maxLines="6"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/item_funcionario_placa"
            tools:text="Nome motorista" />

        <CheckBox
            android:id="@+id/chk_saida"
            android:layout_width="145dp"
            android:layout_height="33dp"
            android:layout_marginLeft="44dp"
            android:layout_marginBottom="52dp"
            android:text="Saida"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <CheckBox
            android:id="@+id/chk_retorno"
            android:layout_width="145dp"
            android:layout_height="33dp"
            android:layout_marginLeft="224dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="52dp"
            android:text="Retorno"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>