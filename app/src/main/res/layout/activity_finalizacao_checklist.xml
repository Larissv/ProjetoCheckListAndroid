<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D5FD9">

    <View
        android:id="@+id/item_divisor_inicio_finalizacao"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="#FF7B22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagem_fundo_branco_finalizacao"
        android:layout_width="338dp"
        android:layout_height="286dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_divisor_inicio_finalizacao"
        app:layout_constraintVertical_bias="0.376"
        app:srcCompat="@drawable/pagina_inicial_fundo_borda_redonda_branco" />

    <ImageView
        android:id="@+id/finalizacao_logo_prolog"
        android:layout_width="269dp"
        android:layout_height="104dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toTopOf="@+id/imagem_fundo_branco_finalizacao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_divisor_inicio_finalizacao"
        app:layout_constraintVertical_bias="0.395"
        app:srcCompat="@drawable/prolog_logo_nome" />

    <TextView
        android:id="@+id/titulo_finalizacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pronto!"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/subtitulo_finalizacao"
        app:layout_constraintEnd_toEndOf="@+id/subtitulo_finalizacao"
        app:layout_constraintStart_toStartOf="@+id/subtitulo_finalizacao"
        app:layout_constraintTop_toTopOf="@+id/imagem_fundo_branco_finalizacao" />

    <TextView
        android:id="@+id/subtitulo_finalizacao"
        android:layout_width="261dp"
        android:layout_height="66dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:text="Seu checklist foi salvo com sucesso! Você pode encontrá-lo preenchido na lista de checklists."
        app:layout_constraintBottom_toBottomOf="@+id/imagem_fundo_branco_finalizacao"
        app:layout_constraintEnd_toEndOf="@+id/imagem_fundo_branco_finalizacao"
        app:layout_constraintStart_toStartOf="@+id/imagem_fundo_branco_finalizacao"
        app:layout_constraintTop_toTopOf="@+id/imagem_fundo_branco_finalizacao" />

    <Button
        android:id="@+id/botao_voltar_inicio_finalizacao"
        android:layout_width="224dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:background="#3D5FD9"
        android:textColor="@color/white"
        android:text="Voltar à página inicial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagem_fundo_branco_finalizacao"
        app:layout_constraintVertical_bias="0.009" />

    <Button
        android:id="@+id/botao_mostrar_checklists_finalizacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Ir para cheklists"
        app:layout_constraintBottom_toBottomOf="@+id/imagem_fundo_branco_finalizacao"
        app:layout_constraintEnd_toEndOf="@+id/subtitulo_finalizacao"
        app:layout_constraintStart_toStartOf="@+id/subtitulo_finalizacao"
        app:layout_constraintTop_toBottomOf="@+id/subtitulo_finalizacao" />

</androidx.constraintlayout.widget.ConstraintLayout>