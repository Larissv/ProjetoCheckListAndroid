<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cursoandroid.projetochecklistandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Check List"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjetoCheckListAndroid"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".activity.activitys.PaginaPrincipalActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.activitys.FormularioCheckListActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.activitys.FormularioCheckListActivity"/>

        <activity
            android:name=".activity.activitys.ListaCheckListsActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.activitys.ListaCheckListsActivity"/>

        <activity
            android:name=".activity.activitys.ChatActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.activitys.ChatActivity"/>

        <activity
            android:name=".activity.activitys.ResumoCheckListActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.activitys.ValidacaoActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.activitys.FinalizacaoActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.activitys.HelpActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.activitys.HelpActivity"/>

    </application>

</manifest>